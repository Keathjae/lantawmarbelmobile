<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Hero Banner / Resort Highlight -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lantaw_marbel_logo"
        android:contentDescription="Resort Banner"
        />

    <!-- New Booking Button -->
    <Button
        android:id="@+id/btnNewBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Now"
        android:textAllCaps="false"
        android:backgroundTint="#086009"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:drawablePadding="8dp"
        android:elevation="4dp"/>

    <!-- Empty Text Message -->
    <TextView
        android:id="@+id/emptyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No bookings found."
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"/>

    <!-- RecyclerView wrapped in CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerBookings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:backgroundTint="#FFC71F"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>
