<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollBookingDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/containerDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Booking Header Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="3dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Review Your Booking Details"
                android:textColor="#008F08"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-condensed-medium"

                />

            <TextView
                android:id="@+id/txtBookingID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking #12345"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#007F69" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:textSize="14sp"
                android:textColor="#00900B"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/status_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/txtBookingDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Check-in: Oct 12, 2025 — Check-out: Oct 14, 2025"
                android:textSize="14sp"
                android:textColor="#444" />

            <TextView
                android:id="@+id/txtGuests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guests: 4 Adults, 2 Children"
                android:textSize="14sp"
                android:textColor="#444"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱8,500.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Booking Details Sections -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:elevation="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Details"
                android:textColor="#007F69"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/txtRooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Rooms: Deluxe Room (x2)"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtCottages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Cottages: Poolside Cottage"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtMenus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Menus: Breakfast Buffet, Lunch Combo"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtBilling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Billing: ₱8,500.00 (All-inclusive)"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtPayments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Payment Method: GCash"
                android:textSize="14sp"
                android:textColor="#333" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
