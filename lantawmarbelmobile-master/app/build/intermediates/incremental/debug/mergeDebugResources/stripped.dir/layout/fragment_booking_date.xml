<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Banner with text overlay -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <TextView
                android:id="@+id/bookingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resort Booking"
                android:textSize="40sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textStyle="bold"
                android:textColor="#FF9800"
                android:layout_centerInParent="true"
                android:gravity="center"/>

            <TextView
                android:id="@+id/bookingSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Check in and Check out"
                android:textSize="14sp"
                android:textColor="#06840F"
                android:layout_below="@id/bookingTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"/>
        </RelativeLayout>

        <!-- check in Date -->
        <TextView
            android:id="@+id/startDateLabel"
            android:text="Check in Date"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/startDateInput"
            android:hint="Select Check in Date"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawablePadding="8dp"
            android:focusable="false"
            android:clickable="true"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Check out Date -->
        <TextView
            android:id="@+id/endDateLabel"
            android:text="Check out Date"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/endDateInput"
            android:hint="Select Check out Date"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawablePadding="8dp"
            android:focusable="false"
            android:clickable="true"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <!-- Adult Guests -->
        <EditText
            android:id="@+id/adultGuestInput"
            android:hint="Number of Adults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:drawableEnd="@drawable/ic_person"
            android:inputType="number"
            android:textColor="@color/black"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <!-- Child Guests -->
        <EditText
            android:id="@+id/childGuestInput"
            android:hint="Number of Children"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:drawableEnd="@drawable/ic_person"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"/>

        <!-- Next Button -->
        <Button
            android:id="@+id/nextButton"
            android:text="Proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0F5D13"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/bookingNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review first before confirming!"
            android:textSize="13sp"
            android:textStyle="italic"
            android:textColor="#DB5A33"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</ScrollView>
