<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="8dp"
app:cardCornerRadius="8dp"
app:cardElevation="4dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cottageImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/cottageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cottage Name"
        android:textColor="#FF9800"
        android:textStyle="bold"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/cottageType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capacity" />

    <TextView
        android:id="@+id/cottagePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#048907"
        android:text="â‚±0.00" />

    <TextView
        android:id="@+id/cottageStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status" />
    <CheckBox
        android:id="@+id/cottageCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cottage"/>

</LinearLayout>
</androidx.cardview.widget.CardView>
