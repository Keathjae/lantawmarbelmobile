<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    >

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#0D5B0F"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <!-- Logo -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/lantaw_marbel_logo"
            android:gravity="center" />

        <!-- Resort Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lantaw Marbel Resort"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFCFC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Service"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Status Indicator -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/status_indicator" />

    </LinearLayout>

    <!-- Chat RecyclerView -->

    <!-- Input Container -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:clipToPadding="false"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/bot_avatar_background"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <!-- Attachment Button -->
        <ImageButton
            android:id="@+id/attachmentButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/attachment_button"
            android:src="@drawable/ic_attachment"
            android:layout_marginEnd="12dp"
            android:contentDescription="Attach file" />

        <!-- Message Input -->
        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/message_input_background"
            android:hint="Type your message..."
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/dark_gray"
            android:textSize="16sp"
            android:maxLines="3"
            android:inputType="textMultiLine|textCapSentences" />

        <!-- Send Button -->
        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle"
            android:src="@drawable/ic_send"
            android:layout_marginStart="12dp"
            android:contentDescription="Send message"
            android:enabled="false" />

    </LinearLayout>


    <!-- Bottom Navigation (Fixed) -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFC107"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_home"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/reservationButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_calendar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/inquiryButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_chat"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inquiry"
                android:textColor="#00FFE8"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>