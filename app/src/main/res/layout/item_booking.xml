<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/purple_500"
    app:strokeWidth="1dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Booking Header -->
        <TextView
            android:id="@+id/txtBookingID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking #6"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"/>

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_marginBottom="8dp"/>

        <!-- Guest Info -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txtGuestName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest: guest guest"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtGuestEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="guest@gmail.com"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Dates -->
        <TextView
            android:id="@+id/txtDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… 2025-09-23 â†’ 2025-09-23"
            android:layout_marginTop="6dp"
            android:textSize="14sp"/>

        <!-- Guests -->
        <TextView
            android:id="@+id/txtGuests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¨ 2 Adults, ðŸ‘¦ 3 Children"
            android:layout_marginTop="4dp"
            android:textSize="14sp"/>

        <!-- Room Info -->
        <TextView
            android:id="@+id/txtRooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¨ Room: #101"
            android:layout_marginTop="4dp"
            android:textSize="14sp"/>

        <!-- Total Price -->
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’° Total: â‚±1500.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/holo_green_dark"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
