<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".Go_to_booking_confirmation">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:elevation="8dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/card_gradient_green"
            app:popupTheme="@style/Theme.AppCompat.Light"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
            app:titleTextColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Booking Confirmation"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/notificationBell"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_notification"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/notificationBadge"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/notification_badge"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Success Icon and Message -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/check_circle_ic"
                    app:tint="#27AE60"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Confirmed!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#27AE60"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your reservation has been successfully confirmed"
                    android:textSize="14sp"
                    android:textColor="#7F8C8D"
                    android:textAlignment="center" />

            </LinearLayout>

            <!-- Receipt Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LANTAW MARBEL RESORT"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#2C3E50" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Booking Receipt"
                                android:textSize="12sp"
                                android:textColor="#7F8C8D" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:id="@+id/bookingId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BK-123456789"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#2C3E50" />

                            <TextView
                                android:id="@+id/bookingDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dec 25, 2024"
                                android:textSize="12sp"
                                android:textColor="#7F8C8D" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="16dp" />

                    <!-- Guest Information -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guest Information"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#2C3E50"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Name:"
                                android:textSize="14sp"
                                android:textColor="#7F8C8D" />

                            <TextView
                                android:id="@+id/guestName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Juan Dela Cruz"
                                android:textSize="14sp"
                                android:textColor="#2C3E50" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Contact:"
                                android:textSize="14sp"
                                android:textColor="#7F8C8D" />

                            <TextView
                                android:id="@+id/guestContact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+63 912 345 6789"
                                android:textSize="14sp"
                                android:textColor="#2C3E50" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Email:"
                                android:textSize="14sp"
                                android:textColor="#7F8C8D" />

                            <TextView
                                android:id="@+id/guestEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="juan@email.com"
                                android:textSize="14sp"
                                android:textColor="#2C3E50" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Check-in/Check-out Information -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stay Details"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#2C3E50"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Check-in:"
                                android:textSize="14sp"
                                android:textColor="#7F8C8D" />

                            <TextView
                                android:id="@+id/checkInDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dec 25, 2024"
                                android:textSize="14sp"
                                android:textColor="#2C3E50" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Check-out:"
                                android:textSize="14sp"
                                android:textColor="#7F8C8D" />

                            <TextView
                                android:id="@+id/checkOutDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dec 27, 2024"
                                android:textSize="14sp"
                                android:textColor="#2C3E50" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Duration:"
                                android:textSize="14sp"
                                android:textColor="#7F8C8D" />

                            <TextView
                                android:id="@+id/duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 nights, 3 days"
                                android:textSize="14sp"
                                android:textColor="#2C3E50" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="16dp" />

                    <!-- Booking Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking Details"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#2C3E50"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/bookingDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Deluxe Room - ₱2,500/night × 2 days (2 adults, 1 kids)\n• Small Cottage - ₱800/day × 2 days\n• Swimming Pool Access - ₱200/person\n• BBQ Grill Set - ₱300/day × 2 days"
                            android:textSize="14sp"
                            android:textColor="#2C3E50"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="16dp" />

                    <!-- Payment Summary -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Summary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#2C3E50"
                            android:layout_marginBottom="8dp" />

                        <!-- Subtotal -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Subtotal:"
                                android:textSize="14sp"
                                android:textColor="#7F8C8D" />

                            <TextView
                                android:id="@+id/subtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₱8,400"
                                android:textSize="14sp"
                                android:textColor="#2C3E50" />

                        </LinearLayout>

                        <!-- Discount (if applicable) -->
                        <LinearLayout
                            android:id="@+id/discountLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Discount (Senior/PWD):"
                                android:textSize="14sp"
                                android:textColor="#27AE60" />

                            <TextView
                                android:id="@+id/discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-₱1,680"
                                android:textSize="14sp"
                                android:textColor="#27AE60" />

                        </LinearLayout>

                        <!-- Total -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total Amount:"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#2C3E50" />

                            <TextView
                                android:id="@+id/totalAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₱6,720"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#E74C3C" />

                        </LinearLayout>

                        <!-- Payment Method -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Payment Method:"
                                android:textSize="14sp"
                                android:textColor="#7F8C8D" />

                            <TextView
                                android:id="@+id/paymentMethod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GCash"
                                android:textSize="14sp"
                                android:textColor="#2C3E50" />

                        </LinearLayout>

                        <!-- Payment Status -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Payment Status:"
                                android:textSize="14sp"
                                android:textColor="#7F8C8D" />

                            <TextView
                                android:id="@+id/paymentStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CONFIRMED"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#27AE60" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Status Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#E8F5E8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking Status"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#2C3E50"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/check_circle_ic"
                            app:tint="#27AE60"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/bookingStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CONFIRMED - Your booking is confirmed and ready!"
                            android:textSize="14sp"
                            android:textColor="#27AE60"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnShareReceipt"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="SHARE RECEIPT"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="#3498DB"
                    app:cornerRadius="8dp"
                    android:drawableStart="@drawable/ic_share"
                    android:drawablePadding="8dp" />

                <Button
                    android:id="@+id/btnDownloadReceipt"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="DOWNLOAD"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="#27AE60"
                    app:cornerRadius="8dp"
                    android:drawableStart="@drawable/ic_download"
                    android:drawablePadding="8dp" />

            </LinearLayout>

            <!-- Book Another Button -->
            <Button
                android:id="@+id/btnBookAnother"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="BOOK ANOTHER RESERVATION"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_blue"
                app:cornerRadius="28dp"
                android:elevation="8dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>